// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  price       Float
}

model Carpark {
  car_park_no   String @id @unique
  address       String
  x_coord       Float
  y_coord       Float
  night_parking Boolean
  rates          Rate[]
}

model Rate {
  id          Int      @id @default(autoincrement())
  carpark     Carpark? @relation(fields: [car_park_no], references: [car_park_no])
  car_park_no String
  pricing     Float
  from        DateTime
  to          DateTime
}

model Lots {
  id              Int      @id @default(autoincrement())
  car_park_no     String
  total_lots      Int
  lots_available  Int
  lot_type        String
  update_datetime DateTime
}

model Zipcode {
  id         Int    @id @default(autoincrement())
  postal     String
  latitude   String
  longtitude String
  searchval  String
  blk_no     String
  road_name  String
  building   String
  address    String
}
